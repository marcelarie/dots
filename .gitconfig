[include]
    path = /home/marcel/.config/delta/themes.gitconfig

[user]
	email = googlillo@gmail.com
	name = marcelarie

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    navigate = true
    ; features =  calochortus-lyallii
    ; side-by-side = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
; [credential]
; 	helper = /usr/bin/git-credential-manager-core
; [credential "https://dev.azure.com"]
; 	useHttpPath = true
[init]
	defaultBranch = main
[merge]
    conflictstyle = zdiff3
[diff]
	algorithm = histogram
	; external = difft
; [commit]
; 	template = ~/.gitmessage
[core]
	editor = nvim
	hookspath = /Users/m.manzanares/.githooks

[safe]
	directory = /Users/m.manzanares/.nixpkgs/
	directory = /Users/m.manzanares/.nixpkgs
	directory = /etc/nix
[commit]
	template = /Users/m.manzanares/.gitmessage
[pull]
	rebase = true
